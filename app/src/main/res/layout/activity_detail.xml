                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgTime"
                    android:layout_toEndOf="@+id/imgTime" />


            </RelativeLayout>

            <RelativeLayout
