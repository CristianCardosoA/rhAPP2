            android:layout_marginTop="25dp"
            android:paddingBottom="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_pressed"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/imgCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dehaze_black_24dp"/>

                <TextView
                    android:id="@+id/txvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:alpha="0.87"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:text="ID"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgCalendar"
                    android:layout_toEndOf="@+id/imgCalendar" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/imgContentPaste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_input_black_24dp"/>

                <TextView
                    android:id="@+id/txvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:alpha="0.87"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold"
                    android:text="STATUS"
                    android:textColor="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgContentPaste"
                    android:layout_toEndOf="@+id/imgContentPaste" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
